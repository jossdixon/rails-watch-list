<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(https://cms.prod.nypr.digital/images/64767/fill-1200x650/);">
  <div class="container">
    <h1>New Bookmark</h1>
    <%= link_to "Back to List", list_path(@list), class: 'btn btn-primary mt-2' %>
  </div>
</div>

<div class="container">
  <h2>Make new bookmark here</h2>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.submit "Create", class: 'btn btn-success' %>
    <% end %>
</div>
